@model IEnumerable<Data.Models.Order>;

<h3 class="card-title">Order List</h3>

<ul class="list-group">
    @foreach (var order in @Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>
                <strong>#@order.Id</strong>
                <span>Date: @order.Date.ToLongDateString()</span>
            </span>
            <span class="badge bg-primary rounded-pill">Total price: @order.TotalPrice$</span>
        </li>
    }
</ul>

<a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
    <i class="bi bi-bag"></i> Continue Shoping
</a>