@model List<Data.Models.Laptop>;
@{
    string productImagePlaceholder = "https://st.depositphotos.com/1001069/1998/i/950/depositphotos_19988345-stock-photo-laptop-with-blank-screen.jpg";
}
<div class="text-center">
    <h1 class="display-4">Popular Products</h1>
    <hr />
    <p>PC Laptops & Netbooks</p>

    <div class="row row-cols-2 row-cols-lg-4 g-3 align-items-stretch">
        @foreach(var i in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@(i.ImagePath ?? productImagePlaceholder)" class="card-img-top prod-image" alt="Product Image">
                    <div class="card-body">
                        <h5 class="card-title">@i.Model</h5>
                        <p>Price: @i.Price$</p>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Laptops" asp-action="Details" asp-route-id="@i.Id" class="btn btn-secondary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
